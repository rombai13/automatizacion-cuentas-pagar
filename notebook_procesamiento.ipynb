import pdfplumber
import pandas as pd
import os
import re

# 1. Configuración de rutas
folder_path = './facturas'
output_file = 'reporte_facturas_2026.xlsx'
data = []

# 2. Función para extraer datos (ajusta los "re.search" según tus facturas)
def extraer_datos_factura(pdf_path):
    with pdfplumber.open(pdf_path) as pdf:
        text = ""
        for page in pdf.pages:
            text += page.extract_text()
        
        # Ejemplo de búsqueda de patrones (ajusta según el formato de tu proveedor)
        # Busca "Total: $1,234.56" o similar
        monto = re.search(r'Total[:\s]*\$?([\d,.]+)', text)
        fecha = re.search(r'Fecha[:\s]*(\d{2}/\d{2}/\d{4})', text)
        folio = re.search(r'Factura No[:\s]*(\w+)', text)

        return {
            "Archivo": os.path.basename(pdf_path),
            "Folio": folio.group(1) if folio else "No encontrado",
            "Fecha": fecha.group(1) if fecha else "No encontrada",
            "Monto": monto.group(1) if monto else "0.00"
        }

# 3. Procesar todos los archivos
for file in os.listdir(folder_path):
    if file.endswith('.pdf'):
        print(f"Procesando: {file}...")
        info = extraer_datos_factura(os.path.join(folder_path, file))
        data.append(info)

# 4. Guardar resultados
df = pd.DataFrame(data)
df.to_excel(output_file, index=False)
print(f"¡Listo! Reporte generado como {output_file}")

