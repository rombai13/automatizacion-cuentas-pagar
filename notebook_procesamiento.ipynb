import pdfplumber
import pandas as pd
import os
import re

folder_path = './facturas'
output_file = 'reporte_cuentas_pagar_2026.xlsx'
data = []

def limpiar_monto(match):
    if match:
        valor_str = match.group(1).replace(".", "").replace(",", ".")
        try:
            return float(valor_str)
        except ValueError:
            return 0.0
    return 0.0

def extraer_datos_finales(pdf_path):
    with pdfplumber.open(pdf_path) as pdf:
        text = "\n".join(page.extract_text() or "" for page in pdf.pages)
        
        # --- Extracción de datos con nuevos requerimientos ---

        # 1. Número de Factura: Ahora espera que empiece con 0xxx y el formato flexible de 8+ digitos
        nro_factura_match = re.search(r'(0\d{3}.{0,5}\d{8,})', text.replace("\n", " "), re.IGNORECASE)
        nro_factura = None
        if nro_factura_match:
            nro_factura = re.sub(r'[^0-9A-Z]', '', nro_factura_match.group(1).upper())

        # 2. Fecha de Emisión (DD.MM.YYYY)
        fecha_str = None
        fecha_match = re.search(r'(\d{2}[-/.]\d{2}[-/.]\d{4})', text)
        if fecha_match:
            fecha_str = fecha_match.group(1).replace("/", ".").replace("-", ".")
            
        # 3. Moneda (USD, ARS, EUR)
        moneda = re.search(r'\b(USD|ARS|EUR)\b', text, re.IGNORECASE)
        moneda_detectada = moneda.group(1).upper() if moneda else "ARS"

        # 4. Importes (Neto y Total)
        total_match = re.search(r'(?:Importe Total|Total|TOTAL|Monto TOTAL|Monto|Importe)[:\s]*\$?\s*([\d\.,]+)', text, re.IGNORECASE)
        neto_match = re.search(r'(?:Neto|Neto Gravado|Subtotal|Base Imponible|SUBTOTAL)[:\s]*\$?\s*([\d\.,]+)', text, re.IGNORECASE)
        importe_total = limpiar_monto(total_match)
        importe_neto = limpiar_monto(neto_match)
        
        # 5. Tipo de Cambio
        tc_match = re.search(r'(?:Tipo de Cambio|TC|Referencia TC|tipo de cambio)[:\s]*\$?\s*([\d\.,]+)', text, re.IGNORECASE)
        tipo_cambio = limpiar_monto(tc_match)
        if tipo_cambio == 0.0 and moneda_detectada == 'USD':
             tipo_cambio = 1.0

        # 6. Nueva columna OC (Orden de Compra) - Empieza con 4729 seguido de 6 digitos
        oc_match = re.search(r'(4729\d{6})', text)
        oc_numero = oc_match.group(1) if oc_match else "No se encuentra"


        return {
            "Archivo": os.path.basename(pdf_path),
            "Nro Factura": nro_factura if nro_factura else "No detectado",
            "Fecha": fecha_str if fecha_str else "No detectada",
            "Moneda": moneda_detectada,
            "Neto": importe_neto,
            "Total": importe_total,
            "Tipo Cambio": tipo_cambio,
            "OC": oc_numero 
        }

# Procesamiento masivo
for file in os.listdir(folder_path):
    if file.lower().endswith('.pdf'):
        try:
            data.append(extraer_datos_finales(os.path.join(folder_path, file)))
        except Exception as e:
            print(f"Error procesando {file}: {e}")

df = pd.DataFrame(data)
df.to_excel(output_file, index=False)
print(f"Procesamiento 2026 completado. Archivo generado: {output_file}")
