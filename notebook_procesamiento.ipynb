import pdfplumber
import pandas as pd
import os
import re

folder_path = './facturas'
output_file = 'reporte_cuentas_pagar_2026.xlsx'
data = []

def extraer_datos_argentina(pdf_path):
    with pdfplumber.open(pdf_path) as pdf:
        text = "\n".join(page.extract_text() or "" for page in pdf.pages)
        
        # 1. CUIT Proveedor (Formato 20-XXXXXXXX-X o similar)
        cuit = re.search(r'CUIT[:\s]*(\d{2}-?\d{8}-?\d{1})', text)
        
        # 2. Número de Factura (Ej: 0004A00001254 o 0004-00001254)
        # Busca 4 números, una letra (A, B, C o M) y 8 números
        nro_factura = re.search(r'(\d{4}[ABC]\d{8})', text.replace("-", ""))
        
        # 3. Fecha de Emisión
        fecha = re.search(r'(\d{2}/\d{2}/\d{4})', text)
        
        # 4. Importes (Busca palabras clave y captura el número decimal)
        # Nota: Se limpian puntos de miles para convertir a float correctamente
        def limpiar_monto(regex, bloque_texto):
            match = re.search(regex, bloque_texto, re.IGNORECASE)
            if match:
                valor = match.group(1).replace(".", "").replace(",", ".")
                return float(valor)
            return 0.0

        neto = limpiar_monto(r'Neto No Gravado[:\s]*\$?\s*([\d\.,]+)|Importe Neto[:\s]*\$?\s*([\d\.,]+)', text)
        total = limpiar_monto(r'Importe Total[:\s]*\$?\s*([\d\.,]+)|Total[:\s]*\$?\s*([\d\.,]+)', text)
        iva = limpiar_monto(r'IVA \d+[\.,]?\d*%?[:\s]*\$?\s*([\d\.,]+)', text)
        
        # 5. Conceptos específicos (IIBB, Percepciones)
        iibb_bsas = limpiar_monto(r'Percepción IIBB Bs\.As\.[:\s]*\$?\s*([\d\.,]+)', text)
        iibb_caba = limpiar_monto(r'Percepción IIBB CABA[:\s]*\$?\s*([\d\.,]+)', text)
        
        # 6. Tipo de Cambio (TC / Referencia)
        tc = re.search(r'(?:Tipo de Cambio|TC|Referencia)[:\s]*\$?\s*([\d\.,]+)', text, re.IGNORECASE)
        tipo_cambio = tc.group(1).replace(",", ".") if tc else "1.00"

        return {
            "Archivo": os.path.basename(pdf_path),
            "CUIT": cuit.group(1) if cuit else "No detectado",
            "Nro Factura": nro_factura.group(1) if nro_factura else "No detectado",
            "Fecha": fecha.group(1) if fecha else "No detectada",
            "Neto": neto,
            "IVA": iva,
            "IIBB BSAS": iibb_bsas,
            "IIBB CABA": iibb_caba,
            "Total": total,
            "Tipo Cambio": tipo_cambio
        }

# Procesamiento masivo
for file in os.listdir(folder_path):
    if file.lower().endswith('.pdf'):
        try:
            data.append(extraer_datos_argentina(os.path.join(folder_path, file)))
        except Exception as e:
            print(f"Error en {file}: {e}")

df = pd.DataFrame(data)
df.to_excel(output_file, index=False)
print(f"Procesamiento 2026 completado. Archivo generado: {output_file}")
